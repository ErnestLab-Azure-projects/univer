@page
@model Univer.Pages.Groups.DetailsModel

@{
    ViewData["Title"] = "Подробности о группе";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Подробности о группе</h1>

<div>
    <h4>Исходные данные</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Наименование группы:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Group.GroupName)
        </dd>        
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.Identity.Name == "admin123@gmail.com")
    {
        <a asp-page="./Edit" asp-route-id="@Model.Group.GroupId">Изменить</a>
        <span>|</span>
    }    
    <a asp-page="./Index">Вернуться к списку групп</a>
</div>
